{
  "manifest_version": 3,
  "name": "YT Music Remote Widget",
  "version": "1.0.0",
  "description": "Floating dynamic-island widget for YT Music controls.",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["https://music.youtube.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["widget.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "YT Music Remote",
    "default_popup": "popup.html"
  }
}
